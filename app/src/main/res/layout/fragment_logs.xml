<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_background"
    tools:context=".Logs">


    <ImageButton
        android:id="@+id/ibFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDesFilter"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/filter_48px"/>

    <TextView
        android:id="@+id/tvLogsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LogsHeading"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnSelectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Select Category"
        android:layout_below="@id/tvLogsHeading"
        />

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="15dp"
        android:text="Filter"
        android:layout_toEndOf="@id/btnSelectCategory"
        android:layout_below="@+id/tvLogsHeading"
        >

    </Button>

    <LinearLayout
        android:id="@+id/linearDatePickers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelectCategory"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="200dp"
        android:hint="Click to select Start Date"
        android:textSize="16sp"
        android:layout_height="48dp"
        android:clickable="false"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="200dp"
        android:hint="Click to select End Date"
        android:textSize="16sp"
        android:layout_height="48dp"
        android:clickable="false"
        android:focusable="false"
        />

    </LinearLayout>

    <!--Activity scroll view-->
    <ScrollView
        android:id="@+id/svCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearDatePickers"
        android:contentDescription="@string/dashscrollview"
        android:paddingBottom="58dp">

        <LinearLayout
            android:id="@+id/linearProjectCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>
    <!--end of scroll view-->



</RelativeLayout>