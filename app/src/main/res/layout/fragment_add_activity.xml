<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context=".AddActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearTopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="X"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add New Activity"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/done"
            android:text="Tick"
            android:textSize="30sp" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTopSection"
        android:id="@+id/tvName"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@+id/tvName"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColorHint="#70000000"
        android:hint="Tap to set name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:id="@+id/tvGoal"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Goal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etGoal"
        android:layout_below="@+id/tvGoal"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColorHint="#70000000"
        android:hint="Tap to set your goal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGoal"
        android:id="@+id/tvCategory"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Category"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCategory"
        android:layout_below="@+id/tvCategory"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColorHint="#70000000"
        android:hint="Tap to set your Category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCategory"
        android:id="@+id/tvColor"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etColor"
        android:layout_below="@+id/tvColor"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColorHint="#70000000"
        android:hint="Tap to set your Colour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etColor"
        android:id="@+id/tvIcon"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Icon"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etIcon"
        android:layout_below="@+id/tvIcon"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColorHint="#70000000"
        android:hint="Tap to set your Icon"/>

</RelativeLayout>